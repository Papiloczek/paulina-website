{
  "name": "wordpress-dev", 
  "version": "1.0.0",
  "description": "WordPress development environment",
  "scripts": {
    "sass": "sass --watch wp-content/themes/twoj-motyw/assets/scss:wp-content/themes/twoj-motyw/assets/css",
    "dev": "browser-sync start --proxy 'localhost:8080' --files 'wp-content/**/*.php,wp-content/**/*.css,wp-content/**/*.js' --reload-delay 1000",
    "dev-all": "npm run sass & npm run dev",
    "build": "sass wp-content/themes/twoj-motyw/assets/scss:wp-content/themes/twoj-motyw/assets/css --style compressed"
  },
  "dependencies": {
    "sass": "^1.69.7"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3"
  }
}